{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "jsx": "preserve",
    "noEmit": true,
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "lib": ["dom", "esnext"],
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["./components/*"],
      "@helpers/*": ["./helpers/*"],
      "@models/*": ["./models/*"],
      "@templates/*": ["./templates/*"],
      "@theme/*": ["./theme/*"],
      "@utils/*": ["./utils/*"]
    }
  },
  "include": ["gatsby", "src", "plugins", "typings"],
  "exclude": ["content", "node_modules", "public", ".cache"]
}
