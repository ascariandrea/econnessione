{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "commonjs",
    "target": "es5",
    "incremental": true,
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "**/__tests__/**",
    "**/*.spec.ts",
    "**/*.test.ts",
    "build",
    "lib"
  ]
}
