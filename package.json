{
  "name": "econnessione",
  "version": "0.1.0",
  "description": "Econnessione's project monorepo",
  "main": "index.js",
  "repository": "git@github.com:ascariandrea/econnessione.git",
  "author": "Andrea Ascari <dev.ascariandrea@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/@econnessione/core",
      "packages/@econnessione/*",
      "services/*"
    ],
    "nohoist": [
      "module-alias"
    ]
  },
  "scripts": {
    "clean": "yarn workspaces run clean",
    "build": "yarn workspaces run build",
    "build:packages": "yarn workspace @econnessione/core build && yarn workspace @econnessione/shared build",
    "test:spec": "jest spec",
    "core:watch": "yarn workspace @econnessione/core build -w",
    "shared:watch": "yarn workspace @econnessione/shared build -w",
    "api:start": "yarn workspace api start",
    "api:watch": "yarn workspace api watch",
    "watch:all": "concurrently \"yarn core:watch\" \"yarn shared:watch\" \"yarn api:watch\"",
    "lint": "yarn workspaces run lint",
    "format": "yarn workspaces run format"
  },
  "engines": {
    "yarn": ">= 1.22.5",
    "npm": "please use yarn >= 1.22.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "10.0.0",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-config-standard-with-typescript": "^19.0.1",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "5.0.0",
    "react-scripts": "^4.0.1",
    "speed-measure-webpack-plugin": "^1.3.3",
    "ts-jest": "^26.4.4"
  },
  "resolutions": {
    "react-scripts/eslint-webpack-plugin": "2.3.0"
  }
}
