{
  "name": "econnessione",
  "version": "0.1.0",
  "description": "Econnessione's project monorepo",
  "main": "index.js",
  "repository": "git@github.com:ascariandrea/econnessione.git",
  "author": "Andrea Ascari <dev.ascariandrea@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/@econnessione/core",
      "packages/@econnessione/*",
      "services/*"
    ],
    "nohoist": [
      "module-alias",
      "**/ts-jest",
      "**/ts-jest/**"
    ]
  },
  "scripts": {
    "clean": "yarn workspaces run clean",
    "build": "yarn workspaces run build",
    "test:spec": "jest spec",
    "test:e2e": "jest e2e",
    "core:build": "yarn workspace @econnessione/core build",
    "shared:build": "yarn workspace @econnessione/shared build",
    "packages:build": "yarn core:build && yarn shared:build",
    "packages:watch": "concurrently \"yarn core:build -w\" \"yarn shared:build -w\"",
    "api:start": "yarn workspace api start",
    "api:watch": "yarn workspace api watch",
    "watch:all": "concurrently \"yarn core:build -w\" \"yarn shared:watch\" \"yarn api:build -w\"",
    "lint": "yarn workspaces run lint",
    "format": "yarn workspaces run format"
  },
  "engines": {
    "yarn": ">= 1.22.5",
    "npm": "please use yarn >= 1.22.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "10.0.0",
    "@types/dockerode": "^3.2.2",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "concurrently": "^5.3.0",
    "dockerode": "^3.2.1",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-config-standard-with-typescript": "^19.0.1",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "5.0.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "pinst": "^2.1.2",
    "react-scripts": "^4.0.1",
    "speed-measure-webpack-plugin": "^1.3.3",
    "ts-jest": "^26.4.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.(ts|tsx|js|jsx)": "eslint --fix",
    "**/*.+(ts|tsx|js|jsx|json|css)": [
      "prettier --write"
    ]
  }
}
