{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "noEmit": true,
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "esnext"],
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "./typings"],
    "baseUrl": "./src",
    "paths": {
      "@templates/*": ["./templates/*"],
      "@theme/*": ["./theme/*"],
      "@providers/*": ["./providers/*"]
    }
  }
}
