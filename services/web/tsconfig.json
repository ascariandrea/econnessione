{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "jsx": "preserve",
    "noEmit": true,
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "esnext"],
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "./typings"],
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["./components/*"],
      "@helpers/*": ["./helpers/*"],
      "@models/*": ["./models/*"],
      "@templates/*": ["./templates/*"],
      "@theme/*": ["./theme/*"],
      "@mock-data/*": ["./mock-data/*"],
      "@utils/*": ["./utils/*"],
      "@cms/*": ["./cms/*"]
    }
  },
  "include": ["gatsby", "src", "typings", "node_modules/server"],
  "exclude": ["content", "node_modules", "public", ".cache"]
}
